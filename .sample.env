# Miro App credentials
MIRO_CLIENT_ID=your_miro_client_id
MIRO_CLIENT_SECRET=your_miro_client_secret
MIRO_REDIRECT_URL=http://localhost:3000/auth

# Server configuration
PORT=3000
NODE_ENV=development

# Security
ENCRYPTION_KEY=your_32_character_encryption_key

# Database configuration
DB_PATH=db/tokens.db

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key_here

# Admin Email (where support/waitlist notifications are sent)
ADMIN_EMAIL=your-email@example.com

# Database (PostgreSQL - Supabase or Vercel Postgres)
POSTGRES_URL=postgresql://user:password@host:port/database

# Admin API Key (for accessing admin endpoints like /api/waitlist GET)
ADMIN_API_KEY=your_secure_random_admin_api_key_here